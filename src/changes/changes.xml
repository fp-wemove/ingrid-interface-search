<document>
  <properties>
    <title>History Ingrid Search Interface</title>
    <author email="joachim@wemove.com">Joachim Müller</author>
  </properties>
  <body>
    <release version="4.0.2" date="2017-04-07" description="Release 4.0.2">
      <action type="fix" dev="wemove" issue="REDMINE-550">
        Support for http and https at the same time.
      </action>
    </release>

    <release version="4.0.1" date="2017-02-01" description="Release 4.0.1">
      <action type="fix" dev="wemove" issue="REDMINE-465">
        Fixed wrong path to save data when using cygwin.
      </action>
      <action type="fix" dev="wemove" issue="REDMINE-468">
        Fixed detail link generation.
      </action>
    </release>
    
    <release version="3.6.2.1" date="2016-07-07" description="Release 3.6.2.1">
      <action type="fix" dev="wemove" issue="REDMINE-329">
        Fix problem: All results from IGE iplug are treated as address results. Object results have no title.
      </action>
    </release>

    <release version="3.6.2" date="2016-05-13" description="Release 3.6.2">
      <action type="update" dev="wemove" issue="">
        Improve performance by caching partner and provider names.
      </action>
    </release>

    <release version="3.6.1.2" date="2016-01-22" description="Release 3.6.1.2">
      <action type="fix" dev="wemove" issue="REDMINE-253">
        Fixed error: "Committed before 500 Internal error".
      </action>
    </release>

    <release version="3.6.1" date="2015-11-18" description="Release 3.6.1">
      <action type="update" dev="wemove" issue="REDMINE-15">
        Remove all references to PortalU.
      </action>
    </release>
    
    <release version="3.6.0" date="2015-06-19" description="Release 3.6.0">
      <action type="update" dev="wemove">
        Filter duplicate entries in the service feeds
      </action>
    </release>

    <release version="3.5.0" date="2015-01-30" description="Release InGrid 3.5.0">
      <action type="add" dev="wemove" issue="REDMINE-524">
        Added license header to all source files for Open Source migration.
      </action>
      <action type="fix" dev="wemove" issue="REDMINE-434">
        Add new configuration property 'atom.download.service.search.extension' for ATOM service feed query extension.
      </action>
    </release>
    
    <release version="3.4.2.2" date="2014-07-08" description="Release InGrid 3.4.2.2">
      <action type="fix" dev="wemove" issue="INGRID-2351">
        Fix GDI-DE test suite compatibility issues.
      </action>
    </release>
    <release version="3.4.2.1" date="2014-05-23" description="Release InGrid 3.4.2.1">
      <action type="fix" dev="wemove" issue="INGRID-2351">
        Fix opensearch descriptor encoding.
      </action>
      <action type="fix" dev="wemove" issue="INGRID-2351">
        Fix GDI-DE test suite compatibility issues.
      </action>
    </release>
    <release version="3.4.2" date="2014-05-22" description="Release InGrid 3.4.2">
      <action type="add" dev="wemove">
        Introduce new HTML Atom Download Service Client accessible under url /dls/.
      </action>
      <action type="fix" dev="wemove" issue="INGRID-2351">
        Fix opensearch description link pattern in configuration.
      </action>
      <action type="fix" dev="wemove">
        Fix cache management to reduce memory usage.
      </action>
      <action type="fix" dev="wemove">
        Fix possible duplicate xml closing elements in opensearch answer.
      </action>
      <action type="update" dev="wemove">
        Improve logging.
      </action>
    </release>
    <release version="3.4.1" date="2014-03-20" description="Release InGrid 3.4.1">
      <action type="add" dev="wemove">
        Add new element "ingrid:iso-xml-url" to the opensearch result. This element contains the metadata xml access url if it exists for the result dataset.
      </action>
      <action type="fix" dev="wemove">
        Fix opensearch interface, fix the correct usage of the url to display detailed view of metadata results.
      </action>
      <action type="fix" dev="wemove">
        Prevent double XML escaping.
      </action>
    </release>
    <release version="3.4.0" date="2014-02-25" description="Release InGrid 3.4.0">
      <action type="add" dev="wemove">
        Do not render type attributes to links if the feed is accessed by an IE browser. Otherwise the links will not be active.
      </action>
      <action type="add" dev="wemove">
        Add long names to ingrid specific data in opensearch results.
      </action>
    </release>
    <release version="3.3.3" date="2014-01-27" description="Feature Release InGrid 3.3.3">
      <action type="fix" dev="wemove">
        Installer: Do not overwrite communication.xml on update-mode.
      </action>
      <action type="add" dev="wemove">
        Add long names for partner and provider as partner-name and provider-name tags.
      </action>
      <action type="update" dev="wemove">
        Better logging settings.
      </action>
    </release>
    <release version="3.3.2.1" date="2014-01-13" description="Bugfix-Release InGrid 3.3.2.1">
      <action type="fix" dev="wemove">
        Do not crash on timeout exception, if an external resource (GetRecordByIdResponse) is not available.
      </action>
      <action type="add" dev="wemove">
        Add configurable timeout for accessing an external resource (GetRecordByIdResponse).
      </action>
    </release>
    <release version="3.3.2" date="2013-11-28" description="Initial-Release InGrid 3.3.2">
      <action type="add" dev="wemove">
        Initial release.
      </action>
    </release>
  </body>
</document>